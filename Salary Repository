package com.example.salaryapp.repository;

import com.example.salaryapp.model.EmployeeSalaryDetails;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

@Repository
public class SalaryRepository {

    @Autowired
    private JdbcTemplate jdbcTemplate;

    public EmployeeSalaryDetails findHighestSalaryNotOnFirst() {
        String sql = """
            SELECT 
                p.AMOUNT AS SALARY,
                CONCAT(e.FIRST_NAME, ' ', e.LAST_NAME) AS NAME,
                FLOOR(DATEDIFF(CURDATE(), e.DOB) / 365.25) AS AGE,
                d.DEPARTMENT_NAME
            FROM 
                PAYMENTS p
            JOIN 
                EMPLOYEE e ON p.EMP_ID = e.EMP_ID
            JOIN 
                DEPARTMENT d ON e.DEPARTMENT = d.DEPARTMENT_ID
            WHERE 
                DAY(p.PAYMENT_TIME) != 1
            ORDER BY 
                p.AMOUNT DESC
            LIMIT 1
            """;

        return jdbcTemplate.queryForObject(sql, (rs, rowNum) -> {
            EmployeeSalaryDetails details = new EmployeeSalaryDetails();
            details.setSalary(rs.getDouble("SALARY"));
            details.setName(rs.getString("NAME"));
            details.setAge(rs.getInt("AGE"));
            details.setDepartmentName(rs.getString("DEPARTMENT_NAME"));
            return details;
        });
    }
}
